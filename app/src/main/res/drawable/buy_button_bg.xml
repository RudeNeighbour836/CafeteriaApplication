<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5733"/> <!-- Background color when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners with a radius of 8dp -->
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/> <!-- Padding when pressed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F5F5DC"/> <!-- Default background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners with a radius of 8dp -->
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/> <!-- Default padding -->
        </shape>
    </item>
</selector>
